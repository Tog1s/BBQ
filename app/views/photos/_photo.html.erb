  <% image_title = "Добавил #{render partial: 'users/user', object: photo.user}" %>
  <% if current_user_can_edit?(photo) %>
  <% delete_title = link_to 'Удалить', 
      event_photo_path(photo.event, photo),
      method: :delete, 
      data: {confirm: t('.destroy_confirm')},
      class: 'btn btn-outline-danger btn-sm'
  %>
  <% image_title << delete_title %>
<% end %>

  <%= link_to image_tag(photo.photo.thumb.url), 
      photo.photo.url, 
      data: {
        toggle: 'lightbox', 
        title: image_title, 
        gallery: 'event-photos'
      } 
  %>
